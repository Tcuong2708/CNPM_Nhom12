
@model IEnumerable<QuanLyKhachSan.Models.DichVu>

@{
    ViewBag.Title = "Quản lý Dịch vụ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* --- BẢNG MÀU TÙY CHỈNH (NAVY & GOLD) --- */
    :root {
        --color-navy: #0f172a; /* Xanh than đậm */
        --color-gold: #d4af37; /* Vàng kim loại */
        --color-gold-hover: #b4932a;
    }

    /* --- CÁC CLASS MÀU SẮC --- */
    .text-navy {
        color: var(--color-navy) !important;
    }

    .bg-navy {
        background-color: var(--color-navy) !important;
        color: white;
    }

    /* Tinh chỉnh nút màu vàng */
    .btn-gold {
        background-color: var(--color-gold);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gold:hover {
            background-color: var(--color-gold-hover);
            color: white;
            transform: translateY(-2px); /* Hiệu ứng nhấc nút lên nhẹ */
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    /* Tinh chỉnh tiêu đề cột bảng */
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border-bottom: none;
    }

    /* Hiệu ứng hover cho dòng trong bảng */
    .table-hover tbody tr:hover {
        background-color: rgba(212, 175, 55, 0.05); /* Màu vàng rất nhạt khi di chuột */
    }

    /* Badge đơn vị tính */
    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    /* Ghi đè màu warning mặc định cho đồng bộ */
    .text-warning {
        color: #b8860b !important; /* Dark GoldenRod */
    }

    .border-warning {
        border-color: var(--color-gold) !important;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-navy fw-bold text-uppercase border-start border-5 border-warning ps-3">
            Danh sách Dịch vụ
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-gold fw-bold shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Thêm dịch vụ mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-navy text-white">
                    <tr>
                        <th class="ps-4 py-3">Tên Dịch vụ</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-center">Đơn vị tính</th>
                        <th class="text-center" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-navy">@item.TenDV</td>
                                <td class="text-end fw-bold text-warning">@item.GiaTien.ToString("#,##0") đ</td>
                                <td class="text-center"><span class="badge bg-light text-dark border">@item.DonVi</span></td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.MaDV })" class="btn btn-sm btn-outline-primary border-0" title="Sửa">
                                        <i class="bi bi-pencil-square fs-5"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.MaDV })" class="btn btn-sm btn-outline-danger border-0" title="Xóa">
                                        <i class="bi bi-trash fs-5"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Chưa có dịch vụ nào trong hệ thống.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
