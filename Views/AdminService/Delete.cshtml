@model QuanLyKhachSan.Models.DichVu

@{
    ViewBag.Title = "Xóa Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white py-3 text-center">
                    <h4 class="mb-0 fw-bold text-uppercase"><i class="bi bi-trash-fill me-2"></i>Xác nhận xóa</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <i class="bi bi-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 text-navy">Bạn có chắc chắn muốn xóa dịch vụ này không?</h5>
                    <p class="text-muted">Hành động này không thể hoàn tác.</p>

                    <div class="alert alert-light border d-inline-block text-start px-5 py-3 mt-2">
                        <p class="mb-1"><strong>Tên dịch vụ:</strong> @Model.TenDV</p>
                        <p class="mb-1"><strong>Giá tiền:</strong> <span class="text-warning fw-bold">@Model.GiaTien.ToString("#,##0") đ</span></p>
                        <p class="mb-0"><strong>Đơn vị:</strong> @Model.DonVi</p>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Không, quay lại</a>
                            <button type="submit" class="btn btn-danger px-4 fw-bold">
                                <i class="bi bi-trash me-2"></i>Đồng ý xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>