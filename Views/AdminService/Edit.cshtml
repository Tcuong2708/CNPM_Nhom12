@model QuanLyKhachSan.Models.DichVu

@{
    ViewBag.Title = "Cập nhật Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-navy text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fw-bold text-uppercase"><i class="bi bi-pencil-square me-2"></i>Cập nhật Dịch Vụ</h4>
                    <span class="badge bg-warning text-dark">ID: @Model.MaDV</span>
                </div>
                <div class="card-body p-5">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaDV)

                        <div class="mb-3">
                            <label class="form-label fw-bold text-navy">Tên dịch vụ</label>
                            @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-navy">Giá tiền (VNĐ)</label>
                                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-navy">Đơn vị tính</label>
                                @Html.EditorFor(model => model.DonVi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DonVi, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 border-top pt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-gold px-4 fw-bold">
                                <i class="bi bi-check-lg me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>