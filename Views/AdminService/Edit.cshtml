@model QuanLyKhachSan.Models.DichVu

@{
    ViewBag.Title = "Cập nhật Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* --- BẢNG MÀU --- */
    :root {
        --color-navy: #0f172a;
        --color-gold: #d4af37;
        --color-gold-hover: #b4932a;
    }

    /* Text & Background colors */
    .text-navy {
        color: var(--color-navy) !important;
    }

    .bg-navy {
        background-color: var(--color-navy) !important;
        color: white;
    }

    /* Nút bấm Vàng Gold */
    .btn-gold {
        background-color: var(--color-gold);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gold:hover {
            background-color: var(--color-gold-hover);
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transform: translateY(-1px);
        }

    /* Tùy chỉnh ô nhập liệu */
    .form-control:focus {
        border-color: var(--color-gold);
        box-shadow: 0 0 0 0.25rem rgba(212, 175, 55, 0.25);
    }

    .form-label {
        font-size: 0.95rem;
    }

    /* Badge ID riêng cho trang Edit */
    .badge-id {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.4);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-navy text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fw-bold text-uppercase fs-5">
                        <i class="bi bi-pencil-square me-2"></i>Cập nhật Dịch Vụ
                    </h4>
                    <span class="badge badge-id px-3 py-2 rounded-pill">
                        ID: #@Model.MaDV
                    </span>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaDV) <div class="mb-4">
                            <label class="form-label fw-bold text-navy">Tên dịch vụ <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label fw-bold text-navy">Giá tiền (VNĐ) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                    <span class="input-group-text bg-light text-secondary">VNĐ</span>
                                </div>
                                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold text-navy">Đơn vị tính <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.DonVi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DonVi, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 border-top pt-4 mt-3">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 fw-bold">
                                <i class="bi bi-x-lg me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-gold px-4 fw-bold">
                                <i class="bi bi-check-lg me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>