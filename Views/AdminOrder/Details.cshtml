@model QuanLyKhachSan.Models.HoaDon

@{
    ViewBag.Title = "Chi tiết đơn đặt phòng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var chiTiet = ViewBag.ChiTiet as List<QuanLyKhachSan.Models.CTHD>;
}

<style>
    /* Bảng màu chuẩn */
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .order-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(15, 41, 66, 0.15);
        overflow: hidden;
        border: 1px solid #eee;
    }

    /* Header màu Xanh Navy + Viền Vàng */
    .order-header {
        background-color: var(--navy-color);
        color: white;
        padding: 20px 25px;
        border-bottom: 4px solid var(--gold-color);
    }

    .info-group label {
        font-weight: 600;
        color: var(--navy-color);
        width: 130px;
        display: inline-block;
    }

    /* Table Header màu Navy nhạt */
    .table-light th {
        background-color: #f1f3f5;
        color: var(--navy-color);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .text-gold {
        color: var(--gold-color) !important;
    }

    .badge-date {
        background-color: rgba(255,255,255,0.1);
        border: 1px solid var(--gold-color);
        color: var(--gold-color);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card order-card mb-4">
                <div class="order-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h4 class="mb-0 fw-bold text-uppercase">
                        <i class="bi bi-receipt me-2 text-gold"></i>Đơn Hàng #@Model.MaHD
                    </h4>
                    <span class="badge badge-date fs-6 px-3 py-2">
                        <i class="bi bi-calendar3 me-1"></i> @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label><i class="bi bi-person-fill me-2 text-muted"></i>Khách hàng:</label>
                                <span class="fw-bold text-dark">@Model.HoTen</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label><i class="bi bi-telephone-fill me-2 text-muted"></i>Số điện thoại:</label>
                                <span>@Model.DienThoai</span>
                            </div>
                        </div>
                        <div class="col-md-12 border-top pt-3 mt-2">
                            <div class="info-group">
                                <label><i class="bi bi-geo-alt-fill me-2 text-muted"></i>Địa chỉ:</label>
                                <span>@Model.DiaChi</span>
                            </div>
                        </div>
                        @if (Model.Account != null)
                        {
                            <div class="col-md-12 pt-2">
                                <div class="info-group">
                                    <label><i class="bi bi-person-badge-fill me-2 text-muted"></i>Tài khoản:</label>
                                    <span class="text-muted fst-italic">@Model.Account.TenDangNhap</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <h5 class="mb-3 fw-bold text-uppercase ps-3" style="color: var(--navy-color); border-left: 5px solid var(--gold-color);">
                Danh sách phòng đã đặt
            </h5>

            <div class="card order-card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Tên phòng</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (chiTiet != null && chiTiet.Count > 0)
                            {
                                decimal tongTienTinhToan = 0;
                                foreach (var item in chiTiet)
                                {
                                    // CÁCH CŨ (Dài dòng):
                                    // decimal thanhTien = (item.SoLuong ?? 0) * item.DonGia;

                                    // CÁCH MỚI (Tận dụng logic trong Model):
                                    decimal thanhTien = item.ThanhTien;

                                    tongTienTinhToan += thanhTien;

                                    <tr>
                                        <td class="ps-4 fw-bold" style="color: var(--navy-color);">
                                            @if (item.Phong != null)
                                            {
                                                @item.Phong.Name
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Phòng đã bị xóa</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr style="background-color: #f8f9fa;">
                                    <td colspan="3" class="text-end fw-bold py-3 fs-5" style="color: var(--navy-color);">TỔNG CỘNG:</td>
                                    <td class="text-end pe-4 fw-bold fs-4 py-3 text-gold">@tongTienTinhToan.ToString("#,##0") đ</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">Không có thông tin chi tiết.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="/AdminOrder/Index" class="btn btn-outline-secondary px-4 py-2 fw-bold">
                    <i class="bi bi-arrow-left me-2"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>