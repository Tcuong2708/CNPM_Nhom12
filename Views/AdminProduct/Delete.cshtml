@model QuanLyKhachSan.Models.Phong

@{
    ViewBag.Title = "Xác nhận xóa";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* --- BẢNG MÀU --- */
    :root {
        --navy-color: #0f172a;
        --gold-color: #d4af37;
    }

    .delete-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(15, 23, 42, 0.15); /* Bóng đổ màu xanh nhẹ */
        overflow: hidden;
        border: none;
        max-width: 600px;
        margin: 0 auto;
    }

    .delete-header {
        background-color: var(--navy-color); /* Đổi sang màu Navy */
        color: white;
        padding: 20px;
        text-align: center;
        border-bottom: 4px solid var(--gold-color); /* Viền vàng tạo điểm nhấn */
    }

    .product-thumb {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        margin-bottom: 15px;
    }

    .price-text {
        color: var(--gold-color); /* Giá tiền màu vàng */
        font-weight: bold;
        font-size: 1.4rem;
    }

    .warning-text {
        background-color: #fff5f5;
        color: #c0392b;
        padding: 15px;
        border-radius: 8px;
        border-left: 5px solid #dc3545; /* Viền đỏ cảnh báo */
        margin: 20px 0;
        text-align: left;
    }
</style>

<div class="container py-5">
    <div class="delete-card">
        <div class="delete-header">
            <h3 class="mb-0 fw-bold text-uppercase fs-4">
                <i class="bi bi-trash3-fill me-2"></i>Xóa Phòng
            </h3>
        </div>

        <div class="card-body p-5 text-center">

    

            <h5 class="text-secondary mb-2">Bạn có chắc chắn muốn xóa phòng này?</h5>

            <h2 class="fw-bold" style="color: var(--navy-color);">@Model.Name</h2>

            <p class="price-text">@Model.Price.ToString("#,##0") VNĐ</p>

            <div class="px-4">
                <div class="warning-text shadow-sm">
                    <strong><i class="bi bi-exclamation-triangle-fill"></i> Lưu ý:</strong>
                    Hành động này không thể hoàn tác. Dữ liệu phòng và các thông tin liên quan sẽ bị xóa vĩnh viễn khỏi hệ thống.
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center gap-3 mt-4 border-top pt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 fw-bold">
                        <i class="bi bi-arrow-left me-2"></i>Hủy bỏ
                    </a>

                    <button type="submit" class="btn btn-danger px-4 fw-bold shadow-sm">
                        <i class="bi bi-trash-fill me-2"></i>Xác nhận xóa
                    </button>
                </div>
            }
        </div>
    </div>
</div>