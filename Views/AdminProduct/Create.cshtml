@model QuanLyKhachSan.Models.Phong

@{
    ViewBag.Title = "Thêm phòng mới";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .admin-form-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #eee;
    }

    .admin-header {
        background-color: var(--navy-color);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: 3px solid var(--gold-color);
    }

    .form-label {
        font-weight: 600;
        color: var(--navy-color);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--gold-color);
        box-shadow: 0 0 0 0.2rem rgba(197, 160, 23, 0.25);
    }

    .btn-gold {
        background-color: var(--gold-color);
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: var(--gold-hover);
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card admin-form-card">
                <div class="admin-header">
                    <h3 class="mb-0 fw-bold text-uppercase" style="letter-spacing: 1px;">
                        <i class="bi bi-door-open-fill me-2 text-gold"></i>Thêm Phòng Nghỉ Mới
                    </h3>
                </div>

                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center"><i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Error</div>
                    }

                    @using (Html.BeginForm("Create", "AdminProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tên Phòng <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ví dụ: P201 Deluxe King", required = "required" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Giá (VNĐ/đêm) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-currency-dollar"></i></span>
                                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", placeholder = "1200000", required = "required" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Loại phòng <span class="text-danger">*</span></label>

                                @Html.DropDownListFor(m => m.MaLoai,
                                                      (SelectList)ViewBag.ListLoai,
                                                      "-- Chọn loại phòng --",
                                                      new { @class = "form-control form-select border-danger", required = "required" })

                                @Html.ValidationMessageFor(m => m.MaLoai, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Hình ảnh</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control" />
                                <small class="text-muted">Chọn ảnh đại diện cho phòng.</small>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label class="form-label">Mô tả chi tiết</label>
                                @Html.TextAreaFor(m => m.Detail, new { @class = "form-control", rows = 4, placeholder = "Mô tả chi tiết về tiện nghi, diện tích..." })
                                @Html.ValidationMessageFor(m => m.Detail, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <a href="/AdminProduct/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-gold px-4 shadow-sm">
                                <i class="bi bi-save me-2"></i> LƯU PHÒNG MỚI
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>