@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lấy lại mật khẩu - May Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            background-color: #f1f5f9;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border: none;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            overflow: hidden;
            border-radius: 10px;
        }

        /* Màu chủ đạo Navy - Gold */
        .bg-navy {
            background-color: #0f172a;
            color: white;
        }

        .text-navy {
            color: #0f172a;
        }

        .btn-gold {
            background-color: #d4af37;
            color: white;
            font-weight: 600;
            border: none;
            transition: all 0.3s;
        }

            .btn-gold:hover {
                background-color: #b4932a;
                transform: translateY(-2px);
            }

        .form-control:focus {
            border-color: #d4af37;
            box-shadow: 0 0 0 0.2rem rgba(212, 175, 55, 0.25);
        }

        .input-group-text {
            background-color: #e2e8f0;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card">
                    <div class="card-header bg-navy text-center py-4">
                        <h4 class="mb-0 text-uppercase fw-bold"><i class="bi bi-key-fill me-2"></i>Đặt lại mật khẩu</h4>
                    </div>

                    <div class="card-body p-4">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger text-center py-2 small">
                                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Error
                                </div>
                            }

                            <p class="text-center text-muted small mb-3">
                                Nhập Tên đăng nhập và Số điện thoại đã đăng ký để thiết lập lại mật khẩu.
                            </p>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-navy small">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" name="tenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập..." required />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-navy small">Số điện thoại xác minh</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                    <input type="text" name="soDienThoai" class="form-control" placeholder="Nhập SĐT của bạn" required />
                                </div>
                            </div>

                            <hr class="my-4 text-muted">

                            <div class="mb-3">
                                <label class="form-label fw-bold text-navy small">Mật khẩu mới</label>
                                <input type="password" name="matKhauMoi" class="form-control" placeholder="Nhập mật khẩu mới" required />
                            </div>
                            <div class="mb-4">
                                <label class="form-label fw-bold text-navy small">Xác nhận mật khẩu</label>
                                <input type="password" name="xacNhanMatKhau" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
                            </div>

                            <button type="submit" class="btn btn-gold w-100 py-2 mb-3">
                                <i class="bi bi-check-circle-fill me-2"></i>Lưu mật khẩu mới
                            </button>
                        }

                        <div class="text-center">
                            <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-muted small hover-underline">
                                <i class="bi bi-arrow-left"></i> Quay lại Đăng nhập
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>