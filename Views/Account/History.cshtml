@model IEnumerable<QuanLyKhachSan.Models.HoaDon>

@{
    ViewBag.Title = "Lịch sử đặt phòng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* --- STYLE RIÊNG (NAVY & GOLD) --- */
    :root {
        --color-navy: #0f172a;
        --color-gold: #d4af37;
    }

    .text-navy {
        color: var(--color-navy) !important;
    }

    .bg-navy {
        background-color: var(--color-navy) !important;
        color: white;
    }

    .text-gold {
        color: var(--color-gold) !important;
    }

    .table thead th {
        border: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .status-badge {
        padding: 5px 10px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .badge-upcoming {
        background-color: #e0f2fe;
        color: #0369a1;
    }
    /* Xanh nhạt */
    .badge-completed {
        background-color: #f0fdf4;
        color: #15803d;
    }
    /* Xanh lá */
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-navy fw-bold text-uppercase border-start border-5 border-warning ps-3">
            Lịch sử đặt phòng
        </h3>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-house-door me-2"></i>Trang chủ
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-navy">
                    <tr>
                        <th class="ps-4 py-3">Mã HĐ</th>
                        <th>Ngày đặt</th>
                        <th>Thời gian lưu trú</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.MaHD</td>
                                <td class="text-muted small">
                                    @item.NgayDat.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <div class="d-flex flex-column small">
                                        <span><i class="bi bi-box-arrow-in-right text-success me-1"></i> @item.NgayNhan.ToString("dd/MM/yyyy")</span>
                                        <span><i class="bi bi-box-arrow-left text-danger me-1"></i> @item.NgayTra.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </td>
                                <td class="text-end fw-bold fs-5 text-gold">
                                    @item.TongTien.ToString("#,##0") <small>đ</small>
                                </td>
                                <td class="text-center">
                                    @if (item.NgayTra < DateTime.Now)
                                    {
                                        <span class="status-badge badge-completed">Đã hoàn tất</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge badge-upcoming">Sắp tới</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("HistoryDetail", "Account", new { id = item.MaHD })"
                                       class="btn btn-sm btn-outline-dark border-0 rounded-circle"
                                       title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">Bạn chưa có lịch sử đặt phòng nào.</p>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-warning text-white fw-bold">Đặt phòng ngay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>