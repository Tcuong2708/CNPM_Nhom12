@model List<QuanLyKhachSan.Models.Phong>
@{
    ViewBag.Title = "Trang chủ - MAY HOTEL";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    /* --- BẢNG MÀU ROYAL NAVY & GOLD --- */
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    /* --- CSS CHO CAROUSEL --- */
    .carousel-item img {
        height: 450px;
        object-fit: cover;
        filter: brightness(0.9);
    }

    /* Hộp khuyến mãi: Nền Navy sang trọng */
    .promo-box {
        background-color: var(--navy-color);
        border-radius: 4px; /* Bo góc ít hơn để nam tính, sang trọng */
        border: 1px solid var(--gold-color); /* Viền vàng kim mảnh */
        color: white;
    }

    /* --- CSS CHO SẢN PHẨM --- */
    .section-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--navy-color); /* Tiêu đề màu Navy */
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
    }

    .card-product {
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

        .card-product:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(15, 41, 66, 0.15); /* Shadow màu xanh navy nhạt */
            border-color: var(--gold-color);
        }

    .product-img-wrapper {
        position: relative;
        overflow: hidden;
        height: 240px; /* Tăng chiều cao ảnh chút cho đẹp */
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .card-product:hover .product-img {
        transform: scale(1.1);
    }

    .badge-hot {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: var(--gold-color); /* Badge màu Vàng Kim */
        color: var(--navy-color);
        padding: 5px 12px;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        box-shadow: 0 2px 5px rgba(0,0,0,0.3);
    }

    .price-tag {
        color: var(--gold-color); /* Giá màu Vàng */
        font-size: 1.1rem;
        font-weight: 800;
    }

    /* Nút Đặt phòng: Màu Vàng Kim */
    .btn-add-cart-home {
        background-color: var(--gold-color);
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px;
        font-weight: 600;
        width: 100%;
        text-transform: uppercase;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .btn-add-cart-home:hover {
            background-color: var(--gold-hover);
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 4px 10px rgba(197, 160, 23, 0.3);
        }

    /* Nút Xem tất cả (Outline Navy) */
    .btn-outline-navy {
        color: var(--navy-color);
        border: 2px solid var(--navy-color);
        background: transparent;
        font-weight: 700;
        padding: 10px 30px;
        border-radius: 50px;
        transition: 0.3s;
    }

        .btn-outline-navy:hover {
            background: var(--navy-color);
            color: var(--gold-color);
        }

    /* Tiện ích màu chữ */
    .text-gold {
        color: var(--gold-color) !important;
    }

    .text-navy {
        color: var(--navy-color) !important;
    }
    /* --- Nút Khuyến mãi (Tương phản cao trên nền tối) --- */
    .btn-promo-light {
        background-color: #ffffff; /* Nền trắng nổi bật */
        color: #0F2942; /* Chữ Xanh Navy đậm */
        border: 2px solid #C5A017; /* Viền Vàng Kim */
        border-radius: 6px;
        padding: 14px;
        font-weight: 800; /* Chữ thật đậm */
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

        .btn-promo-light:hover {
            background-color: #C5A017; /* Hover chuyển sang nền Vàng */
            color: #ffffff; /* Chữ chuyển sang Trắng */
            border-color: #C5A017;
            transform: translateY(-3px); /* Nổi lên nhẹ */
            box-shadow: 0 0 25px rgba(255, 215, 0, 0.6); /* Hiệu ứng phát sáng rực rỡ */
        }
</style>

<section class="container-fluid px-0 mb-5">
    <div class="row g-0">
        <div class="col-lg-8">
            <div id="promoCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://res.klook.com/klook-hotel/image/upload/travelapi/4000000/3350000/3348100/3348019/c5ee5af0_z.jpg" class="d-block w-100" alt="Sảnh khách sạn">
                    </div>
                    <div class="carousel-item">
                        <img src="https://indochinepalace.com/frontend/home/images/full-pool.jpg" class="d-block w-100" alt="Hồ bơi">
                    </div>
                    <div class="carousel-item">
                        <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/15/8a/0e/70/indochine-palace.jpg" class="d-block w-100" alt="Phòng nghỉ">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <div class="col-lg-4 p-0 d-flex align-items-center" style="background-color: #f8f9fa;">
            <div class="promo-box p-5 w-100 h-100 d-flex flex-column justify-content-center border-0 square">

                <h4 class="fw-bold mb-3 text-gold text-uppercase" style="letter-spacing: 1px;">
                    <i class="bi bi-gift-fill me-2"></i>Ưu đãi đặc biệt
                </h4>

                <h2 class="fw-bold text-white mb-3">Mùa lễ hội đã đến!</h2>

                <p class="mb-4" style="color: rgba(255,255,255,0.8);">
                    Đặt phòng ngay hôm nay để trải nghiệm dịch vụ đẳng cấp 5 sao với ưu đãi <strong>Voucher lên tới 1.000.000đ</strong>.<br>
                    <em class="small mt-2 d-block text-gold">* Áp dụng cho thành viên Gold & Platinum.</em>
                </p>

                <div class="alert mb-4 d-flex align-items-center" style="background-color: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                    <i class="bi bi-alarm fs-3 me-3 text-gold"></i>
                    <div>
                        <small class="text-uppercase text-gold fw-bold">Thời gian còn lại:</small><br>
                        <span class="fs-5 fw-bold font-monospace">12 : 05 : 45</span>
                    </div>
                </div>

                <button class="btn btn-promo-light w-100 mt-auto">
                    NHẬN ƯU ĐÃI NGAY <i class="bi bi-arrow-right-circle-fill ms-2 fs-5"></i>
                </button>
            </div>
        </div>
    </div>
</section>

<section class="container py-5" id="products">
    <div class="text-center mb-5">
        <h2 class="section-title">
            <i class="bi bi-stars text-gold"></i> Phòng nghỉ nổi bật
        </h2>
        <p class="text-muted" style="max-width: 700px; margin: 0 auto;">
            Đắm chìm trong không gian kiến trúc tinh tế, tiện nghi hiện đại và tận hưởng những trải nghiệm nghỉ dưỡng tuyệt vời nhất tại MAY HOTEL.
        </p>
    </div>

    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                    <div class="card card-product h-100">
                        <div class="product-img-wrapper">
                            <a href="/SanPham/Details/@item.ID">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@Url.Content(item.ImageUrl)"
                                         class="product-img"
                                         alt="@item.Name">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100 bg-light text-muted">
                                        <i class="bi bi-image fs-1"></i>
                                    </div>
                                }
                            </a>

                            @if (item.Price < 1000000)
                            {
                                <span class="badge-hot"><i class="bi bi-fire me-1"></i>Hot Deal</span>
                            }
                        </div>

                        <div class="card-body text-center d-flex flex-column p-3">
                            <small class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 0.5px;">
                                @(item.Loai != null ? item.Loai.Name : "Luxury Room")
                            </small>

                            <h6 class="card-title fw-bold text-truncate mb-2">
                                <a href="/SanPham/Details/@item.ID" class="text-decoration-none text-navy">@item.Name</a>
                            </h6>

                            <div class="price-tag mb-3">@item.Price.ToString("N0") <small class="text-muted fw-normal" style="font-size: 0.8rem">/ đêm</small></div>

                            <div class="mt-auto">
                                <button class="btn btn-add-cart-home btn-add-cart shadow-sm" data-id="@item.ID">
                                    <i class="bi bi-calendar-check me-2"></i>Đặt ngay
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="text-muted opacity-50">
                    <i class="bi bi-journal-x fs-1"></i>
                    <p class="mt-2">Hiện tại chưa có phòng trống.</p>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a href="/SanPham/Index" class="btn btn-outline-navy">
            XEM TẤT CẢ PHÒNG <i class="bi bi-arrow-right ms-2"></i>
        </a>
    </div>
</section>

<section class="container-fluid py-5 mt-5" style="background-color: #f8f9fa; border-top: 1px solid #eee;">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="p-3">
                    <div class="mb-3 d-inline-flex align-items-center justify-content-center rounded-circle"
                         style="width: 70px; height: 70px; background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <i class="bi bi-stars fs-2 text-gold"></i>
                    </div>
                    <h5 class="fw-bold text-navy">Không Gian Đẳng Cấp</h5>
                    <p class="text-muted small px-lg-4">
                        Hệ thống phòng nghỉ 5 sao, nội thất sang trọng, view thành phố tuyệt đẹp mang lại trải nghiệm thượng lưu.
                    </p>
                </div>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="p-3">
                    <div class="mb-3 d-inline-flex align-items-center justify-content-center rounded-circle"
                         style="width: 70px; height: 70px; background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <i class="bi bi-person-hearts fs-2 text-navy"></i>
                    </div>
                    <h5 class="fw-bold text-navy">Phục Vụ Tận Tâm</h5>
                    <p class="text-muted small px-lg-4">
                        Đội ngũ nhân viên chuyên nghiệp, lễ tân 24/7, luôn sẵn sàng hỗ trợ mọi nhu cầu của Quý khách.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <div class="mb-3 d-inline-flex align-items-center justify-content-center rounded-circle"
                         style="width: 70px; height: 70px; background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <i class="bi bi-geo-alt-fill fs-2 text-gold"></i>
                    </div>
                    <h5 class="fw-bold text-navy">Vị Trí Đắc Địa</h5>
                    <p class="text-muted small px-lg-4">
                        Tọa lạc tại trung tâm thành phố, dễ dàng di chuyển đến các điểm tham quan và trung tâm thương mại.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>