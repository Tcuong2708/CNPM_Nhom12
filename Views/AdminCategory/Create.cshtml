@model QuanLyKhachSan.Models.Loai

@{
    ViewBag.Title = "Thêm loại phòng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    /* Định nghĩa bảng màu */
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .admin-form-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #eee;
    }

    /* Header màu Xanh Navy + Viền Vàng */
    .admin-header {
        background-color: var(--navy-color);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: 3px solid var(--gold-color);
    }

    .form-label {
        font-weight: 600;
        color: var(--navy-color);
    }

    /* Input focus màu Vàng Kim */
    .form-control:focus {
        border-color: var(--gold-color);
        box-shadow: 0 0 0 0.2rem rgba(197, 160, 23, 0.25);
    }

    /* Nút Thêm Mới màu Vàng Kim */
    .btn-gold {
        background-color: var(--gold-color);
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: var(--gold-hover);
            color: white;
            transform: translateY(-2px);
        }

    /* Chữ màu vàng cho icon */
    .text-gold {
        color: var(--gold-color) !important;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card admin-form-card">
                <div class="admin-header">
                    <h3 class="mb-0 fw-bold text-uppercase" style="letter-spacing: 1px;">
                        <i class="bi bi-tags-fill me-2 text-gold"></i>Thêm Loại Phòng Mới
                    </h3>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Create", "AdminCategory", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label">Tên loại phòng <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg", placeholder = "Ví dụ: Phòng đôi, Phòng đơn.." })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top mt-4">
                            <a href="/AdminCategory/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-gold px-4 shadow-sm">
                                <i class="bi bi-plus-circle me-1"></i> THÊM MỚI
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>