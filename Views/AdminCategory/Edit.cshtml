@model QuanLyKhachSan.Models.Loai

@{
    ViewBag.Title = "Cập nhật loại phòng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    /* Bảng màu chuẩn */
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .admin-form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(15, 41, 66, 0.15);
        overflow: hidden;
        border: 1px solid #eee;
    }

    /* Header màu Navy + Viền Vàng */
    .admin-header {
        background-color: var(--navy-color);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: 3px solid var(--gold-color);
    }

    .form-label {
        font-weight: 600;
        color: var(--navy-color);
    }

    /* Input focus màu Vàng Kim */
    .form-control:focus {
        border-color: var(--gold-color);
        box-shadow: 0 0 0 0.2rem rgba(197, 160, 23, 0.25);
    }

    /* Nút Lưu màu Vàng Kim */
    .btn-gold {
        background-color: var(--gold-color);
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: var(--gold-hover);
            color: white;
            transform: translateY(-2px);
        }

    /* Icon màu vàng */
    .text-gold {
        color: var(--gold-color) !important;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card admin-form-card">
                <div class="admin-header">
                    <h3 class="mb-1 fw-bold text-uppercase" style="letter-spacing: 1px;">
                        <i class="bi bi-pencil-square me-2 text-gold"></i>Cập Nhật Loại Phòng
                    </h3>
                    <p class="mb-0 small text-white-50">Mã số: #@Model.MaLoai</p>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "AdminCategory", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.MaLoai) <div class="mb-4">
                            <label class="form-label">Tên loại phòng <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg", placeholder = "Nhập tên loại phòng..." })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top mt-4">
                            <a href="/AdminCategory/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-gold px-4 shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> LƯU THAY ĐỔI
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>  