@model QuanLyKhachSan.Models.Account

@{
    ViewBag.Title = "Thông tin người dùng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .detail-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #eee;
    }

    /* Header màu Navy */
    .detail-header {
        background-color: var(--navy-color);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: 3px solid var(--gold-color);
    }

    .info-label {
        font-weight: 600;
        color: var(--navy-color);
        width: 160px;
    }

    .info-row {
        display: flex;
        border-bottom: 1px dashed #e9ecef;
        padding: 15px 0;
        align-items: center;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    /* Avatar viền Vàng Kim */
    .avatar-circle {
        width: 90px;
        height: 90px;
        background: white;
        border-radius: 50%;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 45px;
        color: var(--gold-color);
        border: 3px solid var(--gold-color);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    /* Badge Vai trò */
    .badge-role-admin {
        background-color: #dc3545;
        color: white;
        padding: 8px 15px;
    }

    .badge-role-user {
        background-color: #e9ecef;
        color: var(--navy-color);
        border: 1px solid #dee2e6;
        padding: 8px 15px;
    }

    /* Nút Sửa màu Vàng Kim */
    .btn-gold {
        background-color: var(--gold-color);
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: var(--gold-hover);
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card detail-card">
                <div class="detail-header">
                    <h3 class="mb-1 fw-bold text-uppercase" style="letter-spacing: 1px;">Thông Tin Chi Tiết</h3>
                    <p class="mb-0 small text-white-50">ID Tài khoản: #@Model.IDTaiKhoan</p>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-5">
                        <div class="avatar-circle mb-3">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h4 class="text-dark fw-bold mb-2">@Model.HoTen</h4>

                        @if (Model.RoleID == 1)
                        {
                            <span class="badge badge-role-admin rounded-pill">Quản Trị Viên (Admin)</span>
                        }
                        else
                        {
                            <span class="badge badge-role-user rounded-pill">Khách Hàng (User)</span>
                        }
                    </div>

                    <div class="px-md-4">
                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-person-badge me-2 text-gold"></i>Tên đăng nhập:</span>
                            <span class="fw-bold" style="color: var(--navy-color);">@Model.TenDangNhap</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-telephone-fill me-2 text-gold"></i>Số điện thoại:</span>
                            <span>@(string.IsNullOrEmpty(Model.SoDienThoai) ? "Chưa cập nhật" : Model.SoDienThoai)</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-calendar-event me-2 text-gold"></i>Ngày sinh:</span>
                            <span>
                                @(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                            </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-gender-ambiguous me-2 text-gold"></i>Giới tính:</span>
                            <span>@(string.IsNullOrEmpty(Model.GioiTinh) ? "Chưa cập nhật" : Model.GioiTinh)</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-geo-alt-fill me-2 text-gold"></i>Địa chỉ:</span>
                            <span>@(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label"><i class="bi bi-clock-history me-2 text-gold"></i>Ngày tạo:</span>
                            <span class="text-muted">
                                @(Model.NgayTaoTK.HasValue ? Model.NgayTaoTK.Value.ToString("dd/MM/yyyy HH:mm") : "")
                            </span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-5 pt-3 border-top">
                        <a href="/AdminUser/Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại
                        </a>

                        <a href="/AdminUser/Edit/@Model.IDTaiKhoan" class="btn btn-gold px-4 shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>