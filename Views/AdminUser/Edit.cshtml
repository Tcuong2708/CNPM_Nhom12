@model QuanLyKhachSan.Models.Account

@{
    ViewBag.Title = "Cập nhật thông tin người dùng";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    :root {
        --navy-color: #0F2942;
        --gold-color: #C5A017;
        --gold-hover: #a68512;
    }

    .admin-form-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #eee;
    }

    /* Header màu Navy */
    .admin-header {
        background-color: var(--navy-color);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: 3px solid var(--gold-color);
    }

    .form-label {
        font-weight: 600;
        color: var(--navy-color);
    }

    /* Input focus màu Vàng Kim */
    .form-control:focus, .form-select:focus {
        border-color: var(--gold-color);
        box-shadow: 0 0 0 0.2rem rgba(197, 160, 23, 0.25);
    }

    /* Input readonly màu xám nhẹ */
    .form-control[readonly] {
        background-color: #e9ecef;
        color: #6c757d;
        border-color: #dee2e6;
    }

    /* Nút Lưu màu Vàng Kim */
    .btn-gold {
        background-color: var(--gold-color);
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: var(--gold-hover);
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card admin-form-card">
                <div class="admin-header">
                    <h3 class="mb-1 fw-bold text-uppercase" style="letter-spacing: 1px;">
                        <i class="bi bi-person-gear me-2 text-gold"></i>Cập Nhật Thông Tin
                    </h3>
                    <p class="mb-0 small text-white-50">@Model.HoTen</p>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "AdminUser", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDTaiKhoan)

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-badge"></i></span>
                                    @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label text-danger">Vai trò (Quyền hạn)</label>
                                @Html.DropDownList("RoleID", null, new { @class = "form-control form-select border-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại</label>
                                @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", type = "number" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày sinh</label>
                                @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Giới tính</label>
                                @Html.DropDownListFor(m => m.GioiTinh,
                                    new SelectList(new[] { "Nam", "Nữ", "Khác" }),
                                    "-- Chọn --",
                                    new { @class = "form-control form-select" })
                            </div>

                            <div class="col-md-12 mb-3">
                                <label class="form-label">Địa chỉ</label>
                                @Html.TextAreaFor(m => m.DiaChi, new { @class = "form-control", rows = 2 })
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <a href="/AdminUser/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-gold px-4 shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i> CẬP NHẬT
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>